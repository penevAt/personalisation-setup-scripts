<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
  <localRepository>/Users/<BbcUserID>/.m2/repository/</localRepository>
  <mirrors>
    <mirror>
      <id>internal-repository</id>
      <name>Maven Repository Manager running on repo.mycompany.com</name>
      <url>https://artifactory.dev.bbc.co.uk/artifactory/repo/</url>
      <mirrorOf>*</mirrorOf>
    </mirror>
  </mirrors>
  <profiles>
    <profile>
      <id>BBC</id>
      <properties>
        <bbc.release.url>https://artifactory.dev.bbc.co.uk/artifactory/int-bbc-releases</bbc.release.url>
        <bbc.snapshot.url>https://artifactory.dev.bbc.co.uk/artifactory/int-bbc-snapshots</bbc.snapshot.url>
      </properties>
      <repositories>
        <repository>
          <id>snapshots-repo</id>
          <url>https://artifactory.dev.bbc.co.uk/artifactory/repo/</url>
          <releases>
            <enabled>false</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>releases-repo</id>
          <url>https://artifactory.dev.bbc.co.uk/artifactory/repo/</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>plugin-repo</id>
          <url>https://artifactory.dev.bbc.co.uk/artifactory/repo/</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>
  <activeProfiles>
    <activeProfile>BBC</activeProfile>
  </activeProfiles>
  <proxies>
      <proxy>
          <active>true</active>
          <protocol>https</protocol>
          <host>www-cache.reith.bbc.co.uk</host>
          <port>80</port>
          <nonProxyHosts>*.national.core.bbc.co.uk,*.*.bbc.co.uk</nonProxyHosts>
          <id>default</id>
      </proxy>
  </proxies>
</settings>
